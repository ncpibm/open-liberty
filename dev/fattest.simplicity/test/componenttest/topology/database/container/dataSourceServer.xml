<server>
	<authData id="recoveryAuth" user="myUser1" password="myPass1" fat.modify="false" />
	<authData id="userAuth" user="myUser2" password="myPass2" fat.modify="true" />
	
	<dataSource id="DefaultDataSource" containerAuthDataRef="userAuth" recoveryAuthDataRef="recoveryAuth" fat.modify="true">
		<properties.derby.embedded createDatabase="create" databaseName="memory:testdb"/>
		<containerAuthData user="myUser3" password="myPass3" /> <!-- fat.modify=null -->
	</dataSource>
	
	<databaseStore>
		<dataSource id="TestDataSource" fat.modify="true">
			<properties.derby.embedded createDatabase="create" databaseName="memory:testdb"
			user="myUser4" password="myPass4"/>
		</dataSource>
	</databaseStore>

</server>